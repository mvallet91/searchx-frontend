@import '../../../../Variables.pcss';

.Bookmarks {
    display: flex;
    flex-direction: column;
    max-height: 600px;
    height: 200px;

    .banner {
        cursor: pointer;
    }

    border: 1px solid #BDC3C7;
    border-radius: 3px;
    
    margin-top: 20px;
    box-shadow: 1px 1px 1px 1px #BFBFBF;

    .buttons {
        float: left;
        margin-right: 6px;
        margin-left: 10px;

        .fa {
            color: #000;
            font-size: 15px;
        }

        .topicon {
            padding-top: 3px;
        }

        .bottomicon {
            margin-top: -3px;
        }

        .remove {
            padding-left: 1px;
        }
    }

    h3 {
        margin-top: 10px;
        margin-left: 15px;

    }


    .list {
        height: 100%;
        overflow-y: auto;

        .item {
            padding: 2px;
            margin-left: 1px;
            margin-right: 5px;
            margin-bottom: 5px;



            h2 {
                font-size: 15px;
                display: block;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                line-height: 21px;
                max-width: 600px;
                margin: 0;
                a, a:hover, a:focus {
                    text-decoration: none;
                }
            }

            span {

                line-height: 16px;
                font-size: 12px;
                max-width: 500px;
                display: block;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
        }
    }

    .popup {
        display: flex;
        flex-flow: column;
        height: 100%;

        .header {
            height: 40px;
            padding: 10px;
            border-bottom: 1px solid $border-color;
            box-shadow: 0 0 15px 0 rgba(50, 50, 50, 0.04);

            .close {
                float: none;
                color: red;
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 10px;

                &:hover,
                &:focus {
                    color: #000;
                    text-decoration: none;
                    cursor: pointer;
                }
            }
        }

        .body {
            flex: 1;
            padding: 15px;
            overflow: auto;
        }
    }
}
